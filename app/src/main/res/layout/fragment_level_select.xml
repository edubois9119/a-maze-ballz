<?xml version="1.0" encoding="utf-8"?>

<GridLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:columnCount="3"
  android:orientation="horizontal"
  android:layout_gravity="center_vertical"
  android:rowCount="5"
  tools:context=".controller.LevelSelectFragment"
  android:layout_marginLeft="32dp"
  android:layout_marginRight="32dp"
  android:layout_marginBottom="32dp"
  android:layout_marginTop="32dp"
  android:layout_centerHorizontal="true"
  android:layout_centerVertical="true"
  tools:ignore="MissingDefaultResource">

  <Button
    android:id="@+id/button_one"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
    android:textSize="50sp"
    android:tag="1"
    android:layout_marginBottom="32dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/holo_blue_bright">
  </Button>

  <Button
    android:id="@+id/button_two"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2"
    android:tag="2"
    android:textSize="50sp"
    android:layout_gravity="center_horizontal">
  </Button>

  <Button
    android:id="@+id/button_three"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3"
    android:tag="3"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_four"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4"
    android:tag="4"
    android:textSize="50sp"
    android:layout_marginBottom="32dp">
  </Button>

  <Button
    android:id="@+id/button_five"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5"
    android:tag="5"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_six"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6"
    android:tag="6"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_seven"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7"
    android:tag="7"
    android:textSize="50sp"
    android:layout_marginBottom="32dp">
  </Button>

  <Button
    android:id="@+id/button_eight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="8"
    android:tag="8"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_nine"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9"
    android:tag="9"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_ten"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="10"
    android:tag="10"
    android:textSize="50sp"
    android:layout_marginBottom="32dp">
  </Button>

  <Button
    android:id="@+id/button_eleven"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="11"
    android:tag="11"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_twelve"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="12"
    android:tag="12"
    android:textSize="50sp">
  </Button>

  <Button
    android:id="@+id/button_thirteen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="13"
    android:tag="13"
    android:textSize="50sp"
    android:layout_marginBottom="32dp"
    android:layout_marginRight="12dp">
  </Button>

  <Button
    android:id="@+id/button_fourteen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="14"
    android:tag="14"
    android:textSize="50sp"
    android:layout_marginRight="12dp">
  </Button>

  <Button
    android:id="@+id/button_fifteen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="15"
    android:tag="15"
    android:textSize="50sp">
  </Button>

</GridLayout>