<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/comp_frag"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Way to go! You did it!"
    android:textColor="@color/colorYellow"
    android:textAlignment="center"
    android:textSize="40dp"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="72dp"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/next_level"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="Choose Another Level"
    android:textAlignment="center"
    android:textSize="32sp"
    android:tag="level"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/colorAccent"/>

  <Button
    android:id="@+id/stats"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="Show User Stats"
    android:textAlignment="center"
    android:textSize="32sp"
    android:tag="stats"
    app:layout_constraintBottom_toTopOf="@id/timestamp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/next_level"
    android:background="@color/colorAccent"/>

  <TextView
    android:id="@+id/timestamp"
    android:text="00:00:00"
    android:textSize="32sp"
    android:textColor="@color/colorYellow"
    android:textAlignment="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/next_level"
    app:layout_constraintBottom_toBottomOf="@id/success"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>